<html>
<head>
    <link rel='stylesheet' type='text/css' media='screen' href='css/bookPage.css'>
</head>
<body>
    <div class="container">
        <div class="Front">

            <div class="backButton">
                <button class="backB"></button>
            </div>
            <div class="GoBackLabel">
                <div class="Title">Go Back</div>
            </div>
            <div>
                <div class="Title">Booking Summary</div>
                <div class="Text">Review your booking before paying</div>
            </div>
        </div>
        <div class="BikeInformationLabel">
            <div class="Title"> Bike Information</div>
            <div class="Text"> Name <%= bikename %> </div>
            <div class="Text">Type, Model <%= bikedescription %> </div>
            <div class="Text"> Address <%= bikeaddress %> </div>
        </div>
        <div class="Picture">
            <img src='<%= bikeimg %>' width="100%" height="100%" />
        </div>
        <div class="DurationLabel">
            <div class="Title"> Duration of the Rental</div>
            <div class="OptionMenu">
                <div class="optionFrame" name="day" id ="dayOption">
                    <div class="selectTime">
                        <button class="selectedOption" name="day" id="daySelection"></button>
                        <div>1 Day</div>
                    </div>
                    <div class="selectAmount">
                        <button class="plusButton" name="day" id="plusButton">+</button>
                        <button class="minusButton" name="day" id="minusButton">-</button>
                    </div>

                </div>
                <div class="optionFrame" name="week" id ="weekOption">
                    <div class="selectTime">
                        <button class="selectedOption" name="week" id="weekSelection"></button>
                        <div>1 Week</div>
                    </div>
                    <div class="selectAmount">
                        <button class="plusButton" name = "week" id="plusButton">+</button>
                        <button class="minusButton" name="week" id="minusButton">-</button>
                    </div>
                </div>
                <div class="optionFrame" name="month" id = "monthOption">
                    <div class="selectTime">
                        <button class="selectedOption" name="month" id ="monthSelection" ></button>
                        <div>1 Month</div>
                    </div>
                    <div class="selectAmount">
                        <button class="plusButton" name="month" id="plusButton">+</button>
                        <button class="minusButton" name="month" id="minusButton">-</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="CostLabel">
            <div class="Title">Costs</div>
            <div class = "CostDetailLabel">
                <div>
                    <img src="css/imgs/bikeIcon.png">
                </div>
                <div class="Text">Bike Rental </div>
                <div class="Text" id = "BikeRentalLabel"></div>
                <div class="Text" id = "AmountDetailLabel"></div>
            </div>
            <div class = "CostDetailLabel">
                <div>
                    <object data="css/imgs/clockIcon.svg" width="40px" height="40px"> </object>
                </div>
                <div class="Text">Reservation</div>
                <div class="Text" id = "ReservationAmountLabel"></div>
            </div>
            <div class = "CostDetailLabel">
                <div>
                    <object data="css/imgs/additionalCostIcon.svg" width="40px" height="40px"> </object>
                </div>
                <div class="Text">Additional Costs</div>
                <div class="Text" id = "AdditionalCostAmountLabel"></div>
            </div>
            <div class = "CostDetailLabel">
                <div>
                    <img src="css/imgs/taxes.png">
                </div>
                <div class="Text">Taxes</div>
                <div class="Text" id = "TaxesAmountLabel"></div>
            </div>
            
        </div>
        <div class="TotalCost">
            <div class="Text">Total Cost</div>
            <div class="Text" id = 'TotalCostAmountLabel'></div>
        </div>
        <div class="PrivacyLabel">
            <div class="Text">By paying, you accept our Term of Service. <br>
                See our Privacy Policy for more details </div>
        </div>
        <div class="PaymentMethod">
            <div class="PaymentMethodContainer">
                <div id="Paypal" >
                    <button class="PayPalButton"></button>
                </div>
                <div id="GooglePay">
                    <button class="googlePayButton"></button>
                </div>
                <div id="ApplePay">
                    <button class="applePayButton"></button>
                </div>
                <div id="MobilePay">
                    <button class="VisaPayButton"></button>
                </div>
                <div id="Visa">
                    <button class="VisaButton"></button>
                </div>
                <div id="Mastercard">
                    <button class="mastercardButton"></button>
                </div>
                <div id="PayButton" class="Text">Pay</div>
            </div>
        </div>
      </div>
      <script src="https://cdn.socket.io/4.5.3/socket.io.min.js" integrity="sha384-WPFUvHkB1aHA5TDSZi6xtDgkF0wXJcIIxXhC6h8OT8EH3fC5PWro5pWJ1THjcfEi" crossorigin="anonymous"></script>
      <script src='js/bookPage.js'></script>
</body>
</html>